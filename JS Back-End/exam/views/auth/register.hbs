<section class="register-form-container">
    <form method="POST">
        <h3>Register</h3>
        <label>Email</label>
        <input type="email" name="email" class="box" id="email">
        <label>Username</label>
        <input type="text" name="username" class="box" id="username">
        <label>Password</label>
        <input type="password" name="password" class="box" id="password">
        <label>Confirm Password</label>
        <input type="password" name="confirmPassword" class="box" id="confirmPassword">
        <input type="submit" value="Register" class="btn">
        <p>Have an account ? <a href="/auth/login">Click here</a></p>
    </form>
</section>