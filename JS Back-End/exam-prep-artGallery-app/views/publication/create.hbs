<main>
    <section id="create-container">
        <div class="create-container-info">
            <!-- Do not forget to change the path to the image -->
            <img src="/img/blog-img12.jpg" alt="image">

            <form method="post" class="container-text">

                <h2>Create Publication</h2>
                <p>Add your own masterpiece!</p>

                <label for="title">Title:</label>
                <input type="text" id="title" name="title" value="{{title}}">

                <label for="painting-tech">Painting technique:</label>
                <input type="text" id="painting-tech" name="paintingTechnique" value="{{paintingTechnique}}">

                <label for="picture">Art picture:</label>
                <input type="text" id="picture" name="artPicture" value="{{artPicture}}">

                <label for="certificate">Certificate of authenticity:</label>
                <input type="text" id="certificate" name="certificate" value="{{certificate}}">

                <button class="create-btn">Create</button>

            </form>

        </div>
    </section>
</main>